


var Quote = ["zero", "one" , "two", "three", "four", "five"];
var LengthA = Quote.length;
var Check = 0;
var BTrigger = false;
var FTrigger = false;

var FQuote = function () 
{
		BTrigger = true;
		
		if(FTrigger == true)
		{
			Check = Check + 2;
			FTrigger = false;
		}
		
		QuoteLabel.text = Quote[Check];
		Check = Check + 1;	
		

		if(Check == LengthA || Check == null)
		{		
			Check = 0;		
		}
		
		
};

var BQuote = function () 
{
		FTrigger = true;
		QuoteLabel.text = Quote[Check];		
		Check = Check - 1;	
		
		if(BTrigger == true)
		{
			Check = Check - 2;
			BTrigger = false;
		}
		
		if(Check == 0 || Check == null)
		{
			Check = LengthA - 1;
		}
		
		
			
		
		
		
};



ButtonBack.addEventListener("click", BQuote);
ButtonForward.addEventListener("click", FQuote);
