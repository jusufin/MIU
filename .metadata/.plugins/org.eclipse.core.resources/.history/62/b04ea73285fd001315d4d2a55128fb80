var CurrentWindow = Ti.UI.currentWindow;

//First Button/////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////

var FieldOne = Ti.UI.createTextField
({
		   borderStyle: Ti.UI.INPUT_BORDERSTYLE_ROUNDED,
		   color: '#336699',
		   width: 150, 
		   height: 30,
		   top: "39%",
		   left: 135
});

var ViewOne = Ti.UI.createView
({
	
			backgroundColor: "#037DCC",
			width:40,
			height: 30,
			top: "39%",
			left: 100
	
});

var LabelOne = Ti.UI.createLabel
({ 		
		
	 		textAlign:'center',
	 		text: "$",
	 		color: "#FFFFFF",
	 		font: {fontSize: 15, fontFamily: "Futura" },
	 		zIndex: 1
 		
});

var TextOne = Ti.UI.createLabel
({ 		
		
	 		textAlign:'center',
	 		text: "Loan Amount: ",
	 		color: "#037DCC",
	 		font: {fontSize: 15, fontFamily: "Futura" },
	 		top: "40%",
	 		left:20,
	 		zIndex: 1
 		
});
///////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////

//Second Button/////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////

var FieldTwo = Ti.UI.createTextField
({
		   borderStyle: Ti.UI.INPUT_BORDERSTYLE_ROUNDED,
		   color: '#336699',
		   width: 50, 
		   height: 30,
		   top: FieldOne - 50,
		   left: 100
});

var ViewTwo = Ti.UI.createView
({
	
			backgroundColor: "#037DCC",
			width:40,
			height: 30,
			top: ViewOne - 50,
			left: 145
	
});

var LabelTwo = Ti.UI.createLabel
({ 		
		
	 		textAlign:'center',
	 		text: "Months",
	 		color: "#FFFFFF",
	 		font: {fontSize: 15, fontFamily: "Futura" },
	 		zIndex: 1
 		
});

var TextTwo = Ti.UI.createLabel
({ 		
		
	 		textAlign:'center',
	 		text: "Loan Term: ",
	 		color: "#037DCC",
	 		font: {fontSize: 15, fontFamily: "Futura" },
	 		top: TextOne - 50,
	 		left:20,
	 		zIndex: 1
 		
});
///////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////

//Second Button/////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////

var FieldThree = Ti.UI.createTextField
({
		   borderStyle: Ti.UI.INPUT_BORDERSTYLE_ROUNDED,
		   color: '#336699',
		   width: 50, 
		   height: 30,
		   top: FieldOne - FieldTwo - 50,
		   left: 100
});

var ViewThree = Ti.UI.createView
({
	
			backgroundColor: "#037DCC",
			width:40,
			height: 30,
			top: ViewOne - ViewTwo - 50,
			left: 145
	
});

var LabelThree = Ti.UI.createLabel
({ 		
		
	 		textAlign:'center',
	 		text: "Months",
	 		color: "#FFFFFF",
	 		font: {fontSize: 15, fontFamily: "Futura" },
	 		zIndex: 1
 		
});

var TextThree = Ti.UI.createLabel
({ 		
		
	 		textAlign:'center',
	 		text: "Loan Term: ",
	 		color: "#037DCC",
	 		font: {fontSize: 15, fontFamily: "Futura" },
	 		top: TextOne - TextTwo - 50,
	 		left:20,
	 		zIndex: 1
 		
});
///////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////


var LineL = Ti.UI.createView
({
	
			backgroundColor: "#037DCC",
			width: "100%",
			height: 10,
			bottom: 0
});




ViewOne.add(LabelOne);
ViewTwo.add(LabelTwo);
ViewThree.add(LabelThree);

CurrentWindow.add
(
	TextOne, TextTwo, TextThree,
	FieldOne, FieldTwo, FieldThree,
	LineL, 
	ViewOne , ViewTwo, ViewThree
);
