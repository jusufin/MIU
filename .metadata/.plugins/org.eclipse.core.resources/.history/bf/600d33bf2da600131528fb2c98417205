


var Quote = ["zero", "one" , "two", "three", "four", "five"];
var LengthA = Quote.length - 1;
var Check = 0;
var Trigger = false;

var FQuote = function () 
{
		
		if(Trigger == false)
		{
			QuoteLabel.text = Quote[Check];
			Check = Check + 1;	
		}
		if(Trigger == true)
		{	
			Trigger = false;
			QuoteLabel.text = Quote[Check];		
			Check = Check + 1;		
		}

		if(Check == LengthA)
		{
			QuoteLabel.text = Quote[Check];
			Check = 0;
			Trigger = true;
		}
		
		
};

var BQuote = function () 
{
		
		if(Check == 0)
		{
			Check = LengthA;
			Trigger = true;
		}
		
		if(Trigger == false)
		{
			QuoteLabel.text = Quote[Check];
			Check = Check - 1;	
		}
		if(Trigger == true)
		{	
			Trigger = false;
			QuoteLabel.text = Quote[Check];		
			Check = Check - 1;		
		}
		
		
};



ButtonBack.addEventListener("click", BQuote);
ButtonForward.addEventListener("click", FQuote);
