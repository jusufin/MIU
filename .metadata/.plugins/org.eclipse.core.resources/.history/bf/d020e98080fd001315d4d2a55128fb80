var CurrentWindow = Ti.UI.currentWindow;


var textField = Ti.UI.createTextField
({
  borderStyle: Ti.UI.INPUT_BORDERSTYLE_ROUNDED,
  color: '#336699',
  top: 10, left: 10,
  width: 250, height: 60
});

var TextOne = Ti.UI.createLabel
({ 		
		
 		textAlign:'center',
 		text: "Loan Amount: ",
 		Color: "#037DCC",
 		font: {fontSize: 12, fontFamily: "Futura" },
 		left:20,
 		zIndex: 1
 		
});

var LineL = Ti.UI.createView
({
	
	backgroundColor: "#037DCC",
	width: "100%",
	height: 10,
	bottom: 0
});

CurrentWindow.add(TextOne, textField, LineL);
