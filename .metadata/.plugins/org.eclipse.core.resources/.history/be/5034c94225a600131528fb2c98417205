


var Quote = ["zero", "one" , "two", "three", "four", "five"];
var Check = 0;

var PickQuote = function () 
{
		
	
		var QuoteLabel = Ti.UI.createLabel({
 		
 		top: 20,
 		left: 20,
 		right: 20,
 		text: Quote[Check],
 		color: "#FFF87C",
 		font: {fontSize: 30, fontFamily: "Futura" },
 		zIndex: 1
		});
		MainView.add(QuoteLabel);
		
		Check = Check + 1;
		
	
};




BackT.addEventListener("click", PickQuote);
ForwardT.addEventListener("click", PickQuote);
