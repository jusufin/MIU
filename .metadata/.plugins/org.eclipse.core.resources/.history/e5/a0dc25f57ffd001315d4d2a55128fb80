var CurrentWindow = Ti.UI.currentWindow;


var textField = Ti.UI.createTextField
({
  borderStyle: Ti.UI.INPUT_BORDERSTYLE_ROUNDED,
  color: '#336699',
  top: 10, left: 10,
  width: 250, height: 60
});

var TextOne = Ti.UI.createLabel
({ 		
		
 		textAlign:'center',
 		text: "Loan Amount: ",
 		font: {fontSize: 12, fontFamily: "Futura" },
 		left:0,
 		zIndex: 1
 		
});


CurrentWindow.add(TextOne, textField);
