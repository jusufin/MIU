var CurrentWindow = Ti.UI.currentWindow;


var circle = Ti.UI.createImageView
({
            width: 100,
            height: 100,
            borderRadius: 50,
            borderColor: '#1a0033',
            backgroundColor: '#B23352'
});

var slider = Titanium.UI.createSlider
({
    Bottom: 50,
    min: 0,
    max: 100,
    width: '100%',
    value: 50
});


CurrentWindow.add(circle,slider);
