//////////////////////////////////////////////////////////////////////////////////////////////
//////////////////////////////////////////////////////////////////////////////////////////////
var dWidth = Ti.Platform.displayCaps.platformWidth;
var dHeight = Ti.Platform.displayCaps.platformHeight;
var Items = 15;
var Rows = 3;
var Margin = 10;

var TrueCanvasWidth = "10%";
var size = (dWidth - (Margin * 4)) / 3  ;
console.log(size);

//creates window
var mainWin = Ti.UI.createWindow
({	
	backgroundColor: "#fff",
	layout: "horizontal"
}); 

var border = Ti.UI.createView
({
		backgroundColor: "#cecece",
		height: 1,
		width: dWidth,
		top: 20
});

var viewContainer = Ti.UI.createView
({
	Width: dWidth,
	top: 20,
	backgroundColor: "#fef",
	layout: "horizontal"
});

for(var i = 0; i < Items; i++)
{
	var view = Ti.UI.createView({
		backgroundColor: "#33CCFF",
		top: Margin,
		left: Margin,
		width: size,
		height: size
	});
	var text = Ti.UI.createLabel({text: i+1, color:"#fff" });
	view.add(text);
	viewContainer.add(view);
};


//////////////////////////////////////////////////////////////////////////////////////////////
//////////////////////////////////////////////////////////////////////////////////////////////



mainWin.add(viewContainer);

mainWin.add(border);

mainWin.open();