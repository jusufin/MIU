


var MainWindow = Ti.UI.createWindow
({	
	backgroundColor:"#818AE5"
}); //creates window and sets backround color

var TitleView = Ti.UI.createView
({
		backgroundColor: "#323659",
		height: 65,
		top: 0
});

var TitelLabel = Ti.UI.createLabel
({ 		
 		top: 30,
 		width: "100%",
 		text: "Dresden Files Bios",
 		color: "#FFF87C",
 		font: {fontSize: 26, fontFamily: "Futura" },
 		textAlign: "center"
});

var border = Ti.UI.createView
({
		backgroundColor: "#323659",
		height: 1,
		top: TitleView.height + TitleView.top
});

var Characters = Ti.UI.createTableView
({
	top: border.top + border.height,
	backgroundColor: "#818AE5"
});

 var MainCharacters = Ti.UI.createTableViewSection
 ({
 	headerTitle: "Characters",
 	footerTitle: "Good Guys"
 });

var MainVillians = Ti.UI.createTableViewSection
 ({
 	headerTitle: "Characters",
 	footerTitle: "Bad Guys"
 });

if (Ti.Platform.name === "iPhone OS")
 {
 	Characters.style = Ti.UI.iPhone.TableViewStyle.GROUPED;
 };

var CharactersSections = [MainCharacters,MainVillians];

Characters.setData(CharactersSections);


TitleView.add(TitelLabel);
MainWindow.add(TitleView,border,Characters);
MainWindow.open();